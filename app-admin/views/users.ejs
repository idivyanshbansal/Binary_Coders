<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/popup.css">

    <link rel="stylesheet"
        href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <link rel="stylesheet"
        href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <style>
        .info img {
            border-radius: 50%;
        }

        .info .container {
            border-radius: 10px;
        }

        .info i {
            font-size: 40px;
            color: #00629b;
        }

        .info .bi-star-fill {
            font-size: 40px;
            color: #9b7400;
        }

        .info h3 {
            font-weight: 700;
        }
    </style>

    <style>
        .card-link {
            padding: 10px;
            border: 1px dashed black;
            border-radius: 10px;
            margin-top: 25px;
            margin-bottom: 25px;
        }

        .certificateName {
            font-size: 14px;
            text-decoration: underline;
        }

        .certificateName:hover {
            color: rgb(0, 128, 255);
        }
    </style>
</head>

<body>
    <!-- Side Bar -->
    <%- // include("./components/sidebar") %>

        <!-- Body -->
        <div class="col-11 ms-auto me-auto">

            <!-- Navbar -->
            <%- // include("./components/header") %>

                <section id="about" class="info">
                    <div class="container" data-aos="fade-up">

                        <div class="row p-3">
                            <% users.forEach(user=> { %>

                                


                                <div class="col-md-4  content">
                                    <div class="card bg-light p-4">
                                        <h2>
                                            <%= user.profile.name %>
                                        </h2>
                                        <p class="fst-italic">
                                            <%= user.username %>
                                        </p>
                                        <h4>Chandiagrh University</h4>
                                        <i class="bi bi-star-fill"></i>
                                        <div class="row justify-content-between">
                                            <div class="col text-center">
                                                <a href="/users/<%= user.username %>"><i class="bi bi-eye-fill"></i></a>
                                            </div>
                                            <div class="col text-center">
                                                <a href="/users/delete/<%= user.username %>"><i class="bi bi-trash-fill"></i></a>
                                            </div>
                                            <div class="col text-center">
                                                <a href="mailto:<%= user.profile.email %>"><i class="bi bi-chat-dots-fill"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>

                    </div>
                </section>



        </div>



        <script src="/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
        <script src="/js/script.js"></script>


        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>




        <script>
            function viewGrades() {
                // get the clock
                var viewingElement = document.getElementById('grades');

                // get the current value of the clock's display property
                var displaySetting = viewingElement.style.display;

                // also get the clock button, so we can change what it says
                var viewButton = document.getElementById('viewButton');

                // now toggle the clock and the button text, depending on current state
                if (displaySetting == 'block') {
                    // clock is visible. hide it
                    viewingElement.style.display = 'none';
                    // change button text
                    viewButton.innerHTML = 'View Grades';
                }
                else {
                    // clock is hidden. show it
                    viewingElement.style.display = 'block';
                    // change button text
                    viewButton.innerHTML = 'Hide Grades';
                }
            }

            function viewCertificate() {
                var viewingElement = document.getElementById('certificates');
                var displaySetting = viewingElement.style.display;
                var viewButton = document.getElementById('viewCertificateButton');

                if (displaySetting == 'block') {
                    // clock is visible. hide it
                    viewingElement.style.display = 'none';
                    // change button text
                    viewButton.innerHTML = '(Show Details)';
                }
                else {
                    // clock is hidden. show it
                    viewingElement.style.display = 'block';
                    // change button text
                    viewButton.innerHTML = '(Hide Details)';
                }
            }
        </script>

</body>

</html>